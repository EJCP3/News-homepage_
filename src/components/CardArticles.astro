---
export interface Props {
    titulo: string,
    subtitulo: string,
    parrafo: string,
    img: string,
}

const {titulo, subtitulo, parrafo, img } = Astro.props
---

<article class="flex gap-4">
    <img class=" max-w-[100px] max-h-[120px]" src={img} alt="">
    <div class="flex flex-col gap-2">
        <h3 class="text-Soft-red text-3xl font-bold ">{titulo}</h3>
        <h5 class="text-xl font-bold hover:text-Soft-red">{subtitulo}</h5>
        <p class="text-gray-400">{parrafo}</p>
    </div>
</article>